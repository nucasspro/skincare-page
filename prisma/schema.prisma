// Prisma Schema
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id           String   @id @default(cuid())
  name         String
  tagline      String
  price        Float
  originalPrice Float?
  discount     Float?
  category     String
  needs        String   // JSON array stored as TEXT
  image        String
  hoverImage   String
  description  String?  // Rich text HTML content
  benefits     String?  // JSON array stored as TEXT
  ingredients  String?  // JSON array stored as TEXT
  howToUse     String?
  createdAt    Int      @default(0)
  updatedAt    Int      @default(0)

  comments     Comment[]
  reviews      Review[]

  @@index([category])
  @@index([createdAt])
  @@map("products")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   Int      @default(0)
  updatedAt   Int      @default(0)

  @@index([name])
  @@map("categories")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  address   String?
  role      String   @default("user")
  createdAt Int      @default(0)
  updatedAt Int      @default(0)

  orders    Order[]
  comments  Comment[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model Order {
  id              String   @id @default(cuid())
  orderNumber     String   @unique  // ORD-12345678

  // Customer Info (for guest checkout)
  customerName    String
  customerEmail   String?
  customerPhone   String

  // Optional User ID (if logged in)
  userId          String?
  user            User?    @relation(fields: [userId], references: [id])

  // Address Details
  streetAddress   String
  wardName        String?
  districtName    String?
  provinceName    String?

  // Order Details
  status          String   @default("pending")  // pending, confirmed, shipping, delivered, cancelled
  paymentMethod   String   // cod, bank
  items           String   // JSON array of OrderItem[]
  total           Float
  notes           String?

  // Timestamps
  createdAt       Int      @default(0)
  updatedAt       Int      @default(0)

  @@index([orderNumber])
  @@index([userId])
  @@index([status])
  @@index([customerPhone])
  @@index([createdAt])
  @@map("orders")
}

model Comment {
  id        String   @id @default(cuid())
  productId String
  userId    String
  userName  String?
  userEmail String?
  content   String
  rating    Int      @default(5)
  status    String   @default("pending")
  createdAt Int      @default(0)
  updatedAt Int      @default(0)

  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("comments")
}

model Review {
  id           String   @id @default(cuid())
  productId    String
  reviewerName String
  rating       Float    @default(5)
  review       String
  createdAt    Int      @default(0)
  updatedAt    Int      @default(0)

  product      Product  @relation(fields: [productId], references: [id])

  @@index([productId])
  @@index([createdAt])
  @@map("reviews")
}
