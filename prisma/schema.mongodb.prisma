// Prisma Schema for MongoDB
// Sử dụng schema này khi muốn dùng Prisma với MongoDB
// Copy file này và đổi tên thành schema.prisma, hoặc dùng DATA_SOURCE=mongodb với mongoPrisma client

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  tagline      String
  price        Float
  originalPrice Float?
  discount     Float?
  category     String   // Category as string (e.g., "oily", "dry", "normal")
  needs        String   // JSON array stored as string
  image        String
  hoverImage   String
  description  String?
  benefits     String?  // JSON array stored as string
  ingredients  String?  // JSON array stored as string
  howToUse     String?
  isDeleted    Boolean  @default(false)
  deletedAt    Int?     // Unix timestamp when deleted
  createdAt    Int      @default(0)
  updatedAt    Int      @default(0)

  reviews      Review[]

  @@index([category])
  @@index([isDeleted])
  @@index([createdAt])
  @@map("products")
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  slug        String?  // Slug for filtering (e.g., "da-dau", "da-mun-nhay-cam")
  description String?
  isDeleted   Boolean  @default(false)
  deletedAt   Int?     // Unix timestamp when deleted
  createdAt   Int      @default(0)
  updatedAt   Int      @default(0)

  @@index([slug])
  @@index([isDeleted])
  @@map("categories")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  phone     String?
  address   String?
  role      String   @default("user")
  createdAt Int      @default(0)
  updatedAt Int      @default(0)

  orders    Order[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model Order {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber     String   @unique
  customerName    String
  customerEmail   String?
  customerPhone   String
  userId          String?  @db.ObjectId
  user            User?    @relation(fields: [userId], references: [id])
  streetAddress   String
  wardName        String?
  districtName    String?
  provinceName    String?
  status          String   @default("pending")
  paymentMethod   String
  items           String   // JSON array of OrderItem[]
  total           Float
  notes           String?
  isDeleted       Boolean  @default(false)
  deletedAt       Int?     // Unix timestamp when deleted
  createdAt       Int      @default(0)
  updatedAt       Int      @default(0)

  @@index([orderNumber])
  @@index([userId])
  @@index([status])
  @@index([isDeleted])
  @@index([customerPhone])
  @@index([createdAt])
  @@map("orders")
}

model Review {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  productId    String   @db.ObjectId
  reviewerName String
  rating       Float    @default(5)
  review       String
  reviewDate   String   // Fake date for display (e.g., "2 tuần trước")
  isDeleted    Boolean  @default(false)
  deletedAt    Int?     // Unix timestamp when deleted
  createdAt    Int      @default(0)
  updatedAt    Int      @default(0)

  product      Product  @relation(fields: [productId], references: [id])

  @@index([productId])
  @@index([isDeleted])
  @@index([createdAt])
  @@map("reviews")
}

model Setting {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  key         String      @unique  // Unique key identifier (e.g., "contact_phone", "logo_url")
  value       String      // Stored as string, parsed based on type
  type        SettingType @default(string)  // Enum: string, number, image, boolean, json
  description String?     // Human-readable description
  group       String?     // Group for organization (e.g., "contact", "seo", "social")
  isPublic    Boolean     @default(false)  // Whether setting is accessible without auth
  createdAt   Int         @default(0)  // Unix timestamp
  updatedAt   Int         @default(0)  // Unix timestamp

  @@index([key])
  @@index([group])
  @@index([type])
  @@map("settings")
}

enum SettingType {
  string
  number
  image
  boolean
  json
}